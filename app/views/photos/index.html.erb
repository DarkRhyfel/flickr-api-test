<div class="photos-container">
    <div class="title">Flickr Photos Widget</div>
    <div class="form-container">
        <%= form_with url: search_photos_path, method: :get, class: 'form-section' do |form| %>
            <div class="field">
                <%= form.label :user_id, "Search for user photos:" %>
                <%= form.text_field :user_id, placeholder: 'Flickr user id...' %>
            </div>
            <div class="actions">
                <%= form.submit "Search", class: 'submit-button' %>
            </div>
        <% end %>
    </div>
    <% unless @user_photos.nil? %>
        <% if @user_photos.empty? %>
            <div class="empty-message">The user has no photos!</div>
        <% else %>
            <div class="photo-reel">
                <% @user_photos.each do |photo| %>
                    <%= image_tag photo, class: 'flickr-photo' %>
                <% end %>
            </div>
        <% end %>
    <% end %>
</div>